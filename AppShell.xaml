<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TriviaApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TriviaApp.View"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        FlyoutItemIsVisible="False"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="MainPage" />

    <ShellContent
        Title="Approve Questions"
        ContentTemplate="{DataTemplate local:ApproveQuestionsPage}"
        Route="ApproveQuestionsPage"/>
    <ShellContent
        Title="Best Scores"
        ContentTemplate="{DataTemplate local:BestScoresPage}"
        Route="BestScoresPage"/>

</Shell>
